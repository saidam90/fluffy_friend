<div class="container">
  <h1>Add a pet</h1>
  <%= simple_form_for [@pet] do |f| %>
    <%= f.input :name %>
    <%= f.input :category, collection: ["Dog", "Cat", "Hamster", "Rabbit"] %>
    <%= f.input :breed %>
    <%= f.input :age %>
    <%= f.input :location %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit "Add", class: "btn btn-primary" %>
  <% end %>
</div>
